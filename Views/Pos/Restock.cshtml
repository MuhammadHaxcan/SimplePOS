@model SimplePOS.ViewModels.RestockItemVm
@{
    ViewData["Title"] = "Restock Item";
    var products = ViewBag.Products as List<SimplePOS.Models.Product>;
}

<h2>Restock Item</h2>

<form asp-action="Restock" method="post">
    <div class="form-group mb-2">
        <label asp-for="ProductId"></label>
        <select asp-for="ProductId" class="form-control" asp-items="@(new SelectList(products, "Id", "Name"))">
            <option value="">-- Select Product --</option>
        </select>
        <span asp-validation-for="ProductId" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Restock</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}